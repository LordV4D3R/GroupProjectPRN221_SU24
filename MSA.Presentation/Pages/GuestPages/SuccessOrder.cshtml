@page
@model MSA.Presentation.Pages.GuestPages.SuccessOrderModel
@{
}
@using MSA.Domain.Dtos.Session
@using Microsoft.AspNetCore.Http
@using System.Text.Json
@using Services
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">

<head>

</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    @{
        var userJSON = HttpContextAccessor.HttpContext!.Session.GetString("CurrentUser");
        var user = userJSON == null ? default(AccountSession) : JsonSerializer.Deserialize<AccountSession>(userJSON);
    }
    @if (user == null)
    {
        <li><a href="~/LoginPage">Đăng nhập</a></li>
    }
    <!-- ***** Main Banner Area Start ***** -->
    <div class="main-banner" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Đơn hàng đã đặt thành công, vui lòng chờ được duyệt</h2>
                        <span>Bạn có thể xem tình trạng đơn hàng  <a href="/GuestPages/OrderShipping?id=@user.Id">tại đây</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->

</body>

</html>


