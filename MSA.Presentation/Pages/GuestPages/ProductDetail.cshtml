@page
@model MSA.Presentation.Pages.GuestPages.ProductDetailModel
@{
}

<!DOCTYPE html>
<html lang="en">

<head>

</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->   
    <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Single Product Page</h2>
                        <span>Awesome &amp; Creative HTML CSS layout by TemplateMo</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->
    <!-- ***** Product Area Starts ***** -->
    <section class="section" id="product">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="left-images">
                        <img src="/@Model.ProductViewModel.ImageUrl" alt="">
                        @* <img src="assets/images/single-product-02.jpg" alt=""> *@
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="right-content">
                        <h4>@Model.ProductViewModel.ProductName</h4>
                        <span class="price">$ @Model.ProductViewModel.Price</span>
                        <span>@Model.ProductViewModel.Description</span>
                        @if (@Model.ProductViewModel.Status == Domain.Enums.ProductStatus.InStock)
                        {
                            <div class="quote">
                                <p>Chỉ còn: @Model.ProductViewModel.TotalQuantity</p>
                            </div>
                        }
                        else
                        {
                            <div class="quote">
                                <p>Hết hàng</p>
                            </div>
                        }

                        <form>
                        <div class="quantity-content">
                            <div class="left-content">
                                <h6>Số lượng mua</h6>
                            </div>
                            <div class="right-content">
                                <div class="quantity buttons_added">
                                    <input type="button" value="-" class="minus"><input type="number" step="1" min="1" max="" name="quantity" value="1" title="Qty" class="input-text qty text" size="4" pattern="" inputmode=""><input type="button" value="+" class="plus">
                                </div>
                            </div>
                        </div>
                        <div class="total">
                            <h4>Tổng tiền: $210.00</h4>
                              
                            <div class="main-border-button"><a href="#">Add To Cart</a></div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Product Area Ends ***** -->

</body>

</html>
